{
  "expo": {
    "name": "Ludo Btounsi",
    "slug": "ludo-btounsi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icons/ludo-btounsi-logo.png",
    "scheme": "ludobtounsi",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/icons/android-adaptive-icon.png",
        "backgroundImage": "./src/assets/images/backgrounds/logo-background.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anasnajar.ludobtounsi"
    },
    "web": {
      "output": "static",
      "favicon": "./src/assets/images/icons/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "root": "./src/app"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/logos/main-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1A1A2E"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
